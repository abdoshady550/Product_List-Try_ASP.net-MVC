@using Asp.net_Web_Api.Entities
@model Product

@{
	ViewData["Title"] = "Product Details";
}

<div class="container py-4">
	<div class="card shadow-sm">
		<div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
			<h4 class="mb-0">
				<i class="bi bi-box-seam me-2"></i> Product Details
			</h4>
			<span class="badge bg-light text-dark">ID: @Model.Id</span>
		</div>

		<div class="card-body">
			<dl class="row mb-0">
				<dt class="col-sm-3">Name</dt>
				<dd class="col-sm-9">@Model.Name</dd>

				<dt class="col-sm-3">Quantity</dt>
				<dd class="col-sm-9">@Model.Quantity</dd>

				<dt class="col-sm-3">Price</dt>
				<dd class="col-sm-9">@Model.Price?.ToString("C")</dd>
			</dl>
		</div>

		<div class="card-footer d-flex justify-content-between flex-wrap gap-2">
			<a asp-action="Index" class="btn btn-secondary">
				<i class="bi bi-arrow-left"></i> Back to List
			</a>
			<div class="d-flex gap-2">
				<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
					<i class="bi bi-pencil-square"></i> Edit
				</a>
				<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
					<i class="bi bi-trash"></i> Delete
				</a>
			</div>
		</div>
	</div>
</div>
